<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Cor da sombra -->
        </shape>
    </item>
    <!-- Fundo Branco -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Fundo branco -->
            <stroke
                android:width="4dp"
                android:color="#000000" /> <!-- Borda preta espessa -->
            <corners android:radius="8dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
</layer-list>
