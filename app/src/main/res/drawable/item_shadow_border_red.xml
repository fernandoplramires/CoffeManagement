<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Sombra -->
<item android:right="4dp" android:bottom="4dp">
    <shape>
        <solid android:color="#D3D3D3" /> <!-- Cor da sombra -->
    </shape>
</item>
<!-- Fundo Branco com Bordas -->
<item>
    <shape>
        <solid android:color="#FFFFFF" /> <!-- Fundo branco -->
        <stroke
            android:width="2dp"
            android:color="@android:color/holo_red_dark" /> <!-- Cor da borda -->
        <corners android:radius="8dp" /> <!-- Cantos arredondados -->
    </shape>
</item>
</layer-list>