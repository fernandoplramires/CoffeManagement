<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado desabilitado -->
    <item android:state_enabled="false">
        <layer-list>
            <item android:right="3dp" android:bottom="3dp">
                <shape>
                    <solid android:color="#E0E0E0" /> <!-- Fundo cinza claro para desabilitado -->
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />
                    <stroke
                        android:width="2dp"
                        android:color="@android:color/darker_gray" /> <!-- Borda cinza escuro para desabilitado -->
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Estado padrão (habilitado) -->
    <item>
        <layer-list>
            <item android:right="3dp" android:bottom="3dp">
                <shape>
                    <solid android:color="#D3D3D3" /> <!-- Fundo cinza padrão -->
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />
                    <stroke
                        android:width="2dp"
                        android:color="#000000" /> <!-- Borda preta para habilitado -->
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>